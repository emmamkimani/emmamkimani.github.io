{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Inflation",
      "anchor": "start",
      "subtitle": "CPI, % | Source: NBS (WB) through ECO API",
      "fontSize": "16",
      "subtitleFontSize": "12",
      "color": "#000000",
      "subtitleColor": "#000000"
    },
    "height": "250",
    "width": 400,
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "background": "#ffffff",
    "view": {
      "fill": "#ffffff",
      "strokeOpacity": 0
    },
    "data": {
      "url": "https://api.economicsobservatory.com/nga/infl?vega",
      "format": {
        "type": "json"
      }
    },
    "mark": {
      "type": "line",
      "color": "#4d0fea",
      "strokeWidth": "2"
    },
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {
          "title": "Year",
          "titleColor": "#122B39",
          "grid": false
        }
      },
      "y": {
        "field": "value",
        "type": "quantitative",
        "axis": {
          "title": "Inflation rate",
          "titleColor": "#122B39",
          "grid": false
        }
      }
    }
  }